{
    "name": "keboola/http-extractor",
    "license": "MIT",
    "type": "project",
    "description": "Keboola HTTP Extractor",
    "keywords": [
        "keboola",
        "http",
        "extractor"
    ],
    "authors": [
        {
            "name": "Tomáš Fejfar",
            "email": "tomas.fejfar@keboola.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Keboola\\HttpExtractor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\HttpExtractor\\Tests\\": "tests/phpunit/"
        }
    },
    "require": {
        "php": "~7.1",
        "guzzlehttp/guzzle": "~6.3",
        "symfony/config": "~4.0",
        "symfony/serializer": "~4.0",
        "keboola/php-component": "~1.0"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "keboola/php-temp": "^1.0",
        "phpstan/phpstan-shim": "^0.9.2",
        "phpunit/phpunit": "^6.5",
        "slevomat/coding-standard": "~4.0",
        "squizlabs/php_codesniffer": "~3.2",
        "symfony/process": "^4.0"
    },
    "scripts": {
        "tests": [
            "@tests-phpunit",
            "@tests-functional"
        ],
        "tests-phpunit": "phpunit",
        "tests-functional": "php ./tests/functional/run.php",
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
