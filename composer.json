{
    "name": "keboola/http-extractor",
    "license": "MIT",
    "type": "project",
    "description": "Keboola HTTP Extractor",
    "keywords": [
        "keboola",
        "http",
        "extractor"
    ],
    "authors": [
        {
            "name": "Tomáš Fejfar",
            "email": "tomas.fejfar@keboola.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "require": {
        "php": "~7.1"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "phpstan/phpstan-shim": "^0.9.2",
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "~3.2"
    },
    "scripts": {
        "tests": "phpunit",
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress",
        "phpcs": "phpcs --standard=psr2 -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
